<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="710px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="450px"
            android:layout_height="450px"
            android:id="@+id/team_rv_img"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:orientation="vertical">
            <TextView
                android:paddingTop="75px"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:id="@+id/team_rv_name"
                android:fontFamily="@font/minecraft"
                android:textColor="@android:color/black"
                android:textSize="100px"
                ></TextView>
            <TextView
                android:fontFamily="@font/minecraft"
                android:textSize="100px"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:id="@+id/team_rv_type"
                ></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            android:text="MOD S"
            android:id="@+id/team_rv_btn_mod"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            android:text="DEL S"
            android:id="@+id/team_rv_btn_del"></Button>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@android:color/black"
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        ></View>
</LinearLayout>
